<script src="/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {

        $('#testbtn').on('click', function () {
            var $btn = $(this).button('loading');
            $.ajax({
                type: 'get',
                url: '@Url.Action("GetText","Home")',
                success: function (result) {
                    $('#backtest').text(result);
                    $btn.button('reset');
                }
            });
        })
        $('#samplebody').collapse('hide');
        $('#samplebody2').collapse('hide');

        $('#samplebody').on('show.bs.collapse', function () {
            alert("準備開始show的動作")
        });

        $('#samplebody').on('shown.bs.collapse', function () {
            alert("show的動作已經結束。")
        });

        $('#samplebody').on('hide.bs.collapse', function () {
            alert("準備開始hide的動作")
        });

        $('#samplebody').on('hidden.bs.collapse', function () {
            alert("hidden的動作已經結束。")
        });

        $('#cycleplay').on('click', function () {
            $('#carousel-example-generic').carousel('cycle',  interval= 300);
        });

        $('#pauseplay').on('click', function () {
            $('#carousel-example-generic').carousel('pause');
        });

        $('#threepic').on('click', function () {
            $('#carousel-example-generic').carousel(2);
        });

    });
    function ToggleSample() {
        $('#samplebody').collapse('toggle');
    };
    function ToggleSample2() {
        $('#samplebody2').collapse('toggle');
    }
</script>
